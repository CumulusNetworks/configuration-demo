auto lo
iface lo inet loopback
    address fd00::34/128

auto eth0
iface eth0 inet dhcp

auto eth2
iface eth2 inet6 static
    address fd16::4:101/112
    pre-up sysctl net.ipv6.conf.$IFACE.accept_dad=0
    post-up ip -6 route add fd00::/8 via fd16::4:1

    # Note that on older kernels (before 2015), IPv6 fails due to lacking
    # optimistic DAD support. Therefore we disable DAD before the interface comes
    # up in this demo.
